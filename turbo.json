{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "ui": "tui",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [
          ".cache",
          ".next/**",
          "!.next/cache/**",
          "build/**",
          "public/build/**",
          "dist/**"
        ]
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": { "cache": false, "persistent": true }
    }
  }